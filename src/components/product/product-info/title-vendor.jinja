<div class="product-header">
  <!-- Product Title and Actions -->
  <div class="d-flex justify-content-between align-items-start mb-2">
    <h1 class="product-title mb-0">{{ product.name }}</h1>
    <div class="product-actions">
      <button type="button" class="btn btn-link p-2" aria-label="Share product">
        <i class="bi bi-share"></i>
      </button>
      <button type="button" class="btn btn-link p-2" aria-label="Add to wishlist">
        <i class="bi bi-heart"></i>
      </button>
    </div>
  </div>

  <!-- Subtitle -->
  {% if product.subtitle %}
  <p class="product-subtitle text-muted mb-2">{{ product.subtitle }}</p>
  {% endif %}

  <!-- Reviews -->
  {% if product.rating %}
  <div class="product-reviews mb-3">
    <div class="d-flex align-items-center gap-2">
      <div class="stars">
        {% for i in range(5) %}
        <i class="bi bi-star{% if i < product.rating.average %}-fill text-warning{% endif %}"></i>
        {% endfor %}
      </div>
      <span class="review-count">({{ product.rating.total_count }})</span>
      <a href="#reviews" class="review-link text-decoration-underline">See reviews</a>
    </div>
  </div>
  {% endif %}

  <!-- Badges -->
  <div class="product-badges mb-3">
    <div class="d-flex flex-wrap gap-2">
      <!-- Offer Timer Badge -->
      <div class="badge badge-offer">
        <i class="bi bi-clock"></i>
        OFFER ENDS IN 12:00:22
      </div>

      <!-- Sold Badge -->
      <div class="badge badge-sold">
        <i class="bi bi-cart-check"></i>
        200+ SOLD
      </div>

      <!-- Viewing Badge -->
      <div class="badge badge-viewing">
        <i class="bi bi-eye"></i>
        20 PEOPLE VIEWING
      </div>

      <!-- Recommended Badge -->
      <div class="badge badge-recommended">
        <i class="bi bi-hand-thumbs-up"></i>
        100% RECOMMENDED
      </div>
    </div>
  </div>

  <!-- Price and SKU -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div class="pricing">
      <span class="current-price">{{ product.formatted_sale_price or product.formatted_price }}</span>
      {% if product.sale_price and product.sale_price < product.price %}
      <span class="original-price">{{ product.formatted_price }}</span>
      <span class="discount-badge">
        {% set discount_percent = ((product.price - product.sale_price) / product.price * 100) | round %}
        {{ discount_percent }}% OFF
      </span>
      {% endif %}
    </div>
    <div class="sku text-muted">SKU {{ product.sku }}</div>
  </div>

  <!-- Product Description -->
  {% if product.short_description %}
  <p class="product-description mb-4">{{ product.short_description }}</p>
  {% endif %}
</div>
