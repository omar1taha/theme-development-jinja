  <!-- Questions & Answers -->
  <div class="accordion-item">
    <h2 class="accordion-header" id="qa-heading">
      <button
        class="accordion-button collapsed"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#qa-collapse"
        aria-expanded="false"
        aria-controls="qa-collapse"
      >
        <span>QUESTIONS & ANSWERS</span>
        <a href="#" class="ask-question-link ms-auto me-3" onclick="event.stopPropagation();">Ask question</a>
      </button>
    </h2>
    <div
      id="qa-collapse"
      class="accordion-collapse collapse"
      aria-labelledby="qa-heading"
      data-bs-parent="#productSpecsAccordion"
    >
      <div class="accordion-body">
        <div class="ask-question-form">
          <h6>Ask your question</h6>
          <form>
            <div class="row mb-3">
              <div class="col-md-6">
                <input type="email" class="form-control" id="questionEmail" placeholder="Email" />
              </div>
              <div class="col-md-6">
                <input type="text" class="form-control" id="questionName" placeholder="Name" />
              </div>
            </div>
            <div class="mb-3">
              <textarea class="form-control" id="questionText" rows="4" placeholder="Enter your question here"></textarea>
            </div>
            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="hideNameCheck">
                <label class="form-check-label" for="hideNameCheck">
                  Do not show my name in the comments
                </label>
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Ask question</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
