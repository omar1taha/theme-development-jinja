{% macro breadcrumb(items) %}
<nav aria-label="breadcrumb" class="py-3">
  <ol class="breadcrumb mb-0">
    {% for item in items %}
      {% if loop.last %}
        <li class="breadcrumb-item active fw-bold" aria-current="page">{{ item.name }}</li>
      {% else %}
        <li class="breadcrumb-item">
          <a href="{{ item.url }}" class="text-dark" style="text-decoration: underline;">{{ item.name }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ol>
</nav>
{% endmacro %}